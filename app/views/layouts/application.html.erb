<!DOCTYPE html>
<html>
<head>
  <title>Model United Nations</title>

  <%= Gon::Base.render_data({}) %>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>

  <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>
  <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.6.0/underscore-min.js"></script>


  <script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
  <script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <% if user_signed_in? %>
      <%= stylesheet_link_tag "sb-admin" %>
  <% else %>
      <%= stylesheet_link_tag "landing" %>
  <% end %>


  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>

  <%= csrf_meta_tags %>
</head>

<% if !user_signed_in?%>
    <%= render partial: "layouts/landing" %>
<% else %>

    <body>

    <div id="wrapper">




      <%= render partial: "layouts/navigation" %>
      <%= render partial: "layouts/side_navigation" %>
      <div id="page-wrapper">
        <% if notice %>
            <br>

            <div class="alert alert-info alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <%= notice %>
            </div>

        <% end %>
        <% if alert %>
            <br>

            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
              <%= alert %>
            </div>
        <% end %>

        <!--<%- flash.each do |name, message| %>
            <% if name == "alert" %>
                <div class="alert alert-info alert-dismissable">
              <p><i class="alert alert-danger"><%= "#{name}: #{message}" %></i></p>
            <% else %>
                <p><i class="alert alert-warning"><%= "#{name}: #{message}" %></i></p>
            <% end %>

        <% end %>-->



        <%= yield %>

      </div>
      <!-- /#page-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Modal -->
    <div class="modal fade" id="tutorial_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">How do you consider yourself?</h4>
          </div>
          <div class="modal-body">

            <div class="btn-group btn-group-justified" >
              <div class="btn-group">
                <button onClick="delegate_tutorial.start();" type="button" class="btn btn-default" style="font-size:24px">
                  <i class="fa fa-comment fa-fw"></i>
                  </br>
                  Delegate
                </button>
              </div>
              <div class="btn-group">
                <button type="button" class="btn btn-default" style="font-size:24px">
                  <i class="fa fa-comments-o fa-fw"></i>
                  </br>
                  Conference Manager
                </button>
              </div>
              <div class="btn-group">
                <button type="button" class="btn btn-default" style="font-size:24px">
                  <i class="fa fa-comments fa-fw"></i>
                  </br>
                  Teacher
                </button>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            <!--<button type="button" class="btn btn-primary">Save changes</button>-->
          </div>
        </div>
      </div>
    </div>

    </body>

<% end %>
<%= javascript_include_tag "google_analytics" %>
</html>
