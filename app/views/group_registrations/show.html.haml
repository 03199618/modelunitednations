.row
  .col-lg-12
    %h1.page-header
      Registration at
      = @group_registration.conference.name
      .btn-group
        %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
          %i.fa.fa-gear.fa-fw
          %span.caret
        %ul.dropdown-menu.pull-right{role: "menu"}
          - if can? :withdraw, @group_registration
            %li
              = button_to 'Withdraw', withdraw_group_registration_path(@group_registration), :method => :put
          - if can? :accept, @group_registration
            %li
              = button_to  'Accept', accept_group_registration_path(@group_registration), :method => :put
          - if can? :reject, @group_registration
            %li
              = button_to 'Reject', reject_group_registration_path(@group_registration), :method => :put
