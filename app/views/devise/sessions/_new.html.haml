.row
  .col-md-4.col-md-offset-4
    .login-panel.panel.panel-default
      .panel-heading
        %h3.panel-title Please Sign In
      .panel-body
        = form_for(:user, :url => session_path(:user)) do |f|
          %fieldset
            .form-group
              = f.label :email, style: "color:#000"
              = f.email_field :email, :autofocus => true, class:"form-control"
            .form-group
              = f.label :password, style: "color:#000"
              = f.password_field :password, class: "form-control"
            .checkbox
              %label
                /Remember Me
                /- if devise_mapping.rememberable?
                /  = f.check_box :remember_me

            %div= f.submit "Sign in", class:"btn btn-lg btn-success btn-block"
        = render partial: "devise/shared/links", locals: {resource_name: :user, devise_mapping: Devise.mappings[:user]}