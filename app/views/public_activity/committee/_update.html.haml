%a{href: committee_path(activity.trackable)}
  %div
    %i.fa.fa-comments.fa-fw
    - if activity.trackable
      = activity.trackable.name
      of
      = activity.trackable.conference.name
      has been updated.
    - else
      = activity.trackable.name
      of
      = activity.trackable.conference.name
      has been updated and has since been removed.
    %span.pull-right.text-muted.small
      = time_ago_in_words(activity.created_at)
