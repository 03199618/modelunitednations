.row
  .col-lg-12
    %h1.page-header
      Conferences
.row
  - @conferences.each do |conference|
    .col-lg-4
    .panel.panel-default
      .panel-heading
        = conference.name
      .panel-body
        = conference.description
      .panel-footer
        = link_to "Go to #{conference.name}", conference_path(conference)
        ,
        = link_to "Register at #{conference.name}", new_registration_path(conference_id: conference.id)
