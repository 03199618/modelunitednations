.row
  .col-lg-12
    %h1.page-header
      = @comittee.conference.name
      = @comittee.name
      .btn-group
        %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
          %i.fa.fa-gear.fa-fw
          %span.caret
        %ul.dropdown-menu.pull-right{role: "menu"}
          %li
            %a{href: edit_comittee_path(@comittee)}
              Edit
              = @comittee.name
          %li
            %a{href: "#"} Another action
          %li
            %a{href: "#"} Something else here
          %li.divider
          %li
            %a{href: "#"} Separated link

.row
  - if can? :create, @comittee.comittee_sessions.new
    .col-lg-4
      .panel.panel-primary
        .panel-heading
          = "Session"
        .panel-body
          %p
            In a session you can appoint speakers, hold votings and impose breaks.
          = button_to 'Go into Session', new_comittee_session_path(committee_id: @comittee.id), class: "btn btn-primary"

  - if true #can? :create, @comittee.anouncements.new
    .col-lg-4
      .panel.panel-info
        .panel-heading
          = "Announcement"
        .panel-body
          %p
            An announcement will be passed to all delegates.
          = button_to 'Create announcement', new_comittee_session_path(committee_id: @comittee.id), class: "btn btn-info"

  - if @comittee.description

    .col-lg-4
      .panel.panel-default
        .panel-heading
          Description
        .panel-body
          = @comittee.description
  - if @comittee.topics
    .col-lg-4
      .panel.panel-default
        .panel-heading
          Topics
        .panel-body
          - @comittee.topics.each do |topic|
            = link_to "#{topic.name}", topic_path(topic)
            %br
          = link_to "+ Add topic", new_topic_path(comittee_id: @comittee.id)



  .col-lg-4
    .panel.panel-default
      .panel-heading
        = "Delegates"
        .pull-right
          .btn-group
            %button.btn.btn-default.btn-xs.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
              Actions
              %span.caret
            %ul.dropdown-menu.pull-right{role: "menu"}
              %li
                %a{href: new_delegate_path(comittee_id: @comittee.id)} Add delegate
              %li
                %a{href: "#"} Another action
              %li
                %a{href: "#"} Something else here
              %li.divider
              %li
                %a{href: "#"} Separated link
      .panel-body
        - @comittee.delegates.each do |delegate|
          = link_to "#{delegate.title}", delegate_path(delegate)
          %br

      .panel-footer
        = "#{pluralize(@comittee.delegates.count, "delegate")}"


